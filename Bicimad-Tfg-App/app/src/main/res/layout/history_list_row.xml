<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/from"
        android:textColor="@color/primaryText"
        android:text="From"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/departurestation"
        android:textColor="@color/colorAccent"
        android:text="Pintor Rosales"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/from"
        android:layout_width="115dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/stationdivider"
        android:textColor="@color/primaryText"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/to"
        android:textColor="@color/primaryText"
        android:text="To"
        android:textSize="16dp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/arrivalstation"
        android:textColor="@color/colorAccent"
        android:text="Pintor Rosales"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        />


    <TextView
        android:id="@+id/bikeident"
        android:layout_below="@id/departurestation"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/primaryText"
        android:text="bike#"/>

    <TextView
        android:id="@+id/date"
        android:textColor="@color/secondaryText"
        android:layout_width="wrap_content"
        android:layout_below="@id/arrivalstation"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:text="DATE AND TIME"/>

    <TextView
        android:id="@+id/historyCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/secondaryText"/>

</RelativeLayout>