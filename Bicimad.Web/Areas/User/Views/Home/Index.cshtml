@using Bicimad.Web.Extensions
@model PagedList.StaticPagedList<Bicimad.Services.Query.Dto.History.UserHistoryDto>
@{
    ViewBag.Title = "Trayectos";
}

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-responsive">
            <tr>
                <th>Departure Station</th>
                <th>Arrival Station</th>
                <th>Date</th>
                <th>Time</th>
                <th>Bike #</th>
                <th>Finished</th>
            </tr>
            
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.DepartureStationUserName
                    </td>

                    <td>
                        @user.ArrivalStationUserName
                    </td>

                    <td>
                        @user.CreatedDate.ToShortDateString()
                    </td>

                    <td>
                        @user.CreatedDate.ToShortTimeString()
                    </td>

                    <td>
                        @user.BikeId
                    </td>

                    <td>
                        @if (user.Finished)
                        {
                            <label>
                                <input type="checkbox" checked disabled>
                            </label>
                        }
                        else
                        {
                            <label>
                                <input type="checkbox" disabled>
                            </label>
                        }
                    </td>

                </tr>
            }
        </table>

        @Html.GenericPager(Model, page => Url.Action(MVC.User.Home.Index(page)))
    }



