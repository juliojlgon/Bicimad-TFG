@model Bicimad.Web.Models.Home.BikeStatsModel
@{
    ViewBag.Title = "Home";
}

<br/>
@* TODO: Añadir un botón para marcar avería *@
<div class="col-md-2 center-block" style="margin-top: 5em">
    <div class="card default-color darken-1 z-depth-3">
        <div class="card-content white-text">
            <span class="card-title">Statistics</span>
            @if (Model != null)
            {
                <p>Free Bikes: @Model.FreeBikes </p>
                <p>Active Bikes: @Model.ActiveBikes</p>
                <p>Broken Bikes:@Model.BrokenBikes </p>
            }

        </div>
    </div>

    <div class="panel text-center">
        <a href="@Url.Action(MVC.Bike.Index())" class="btn btn-primary btn-block waves-effect blue">Take Bike</a>
        <a href="@Url.Action(MVC.Bike.Index())" class="btn btn-primary btn-block waves-effect default-color">Return Bike</a>
        <a href="@Url.Action(MVC.Bike.ReturnIndex())" class="btn btn-primary btn-block waves-effect default-color">Book slot</a>
        <a href="@Url.Action(MVC.Bike.ReturnIndex())" class="btn btn-primary btn-block waves-effect blue">Return Bike</a>
    </div>
</div>

<div class="card default-color darken-1 col-md-10">
    <div class="card-content">
        <span class="card-title">Status</span>
        <div id="map" style="height: 550px;
                                      max-height: 50%;">
        </div>
    </div>
</div>


