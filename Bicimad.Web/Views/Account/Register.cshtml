@model Bicimad.Web.Models.AccountModels.RegisterModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

<form action="@Url.Action(MVC.Account.Register())" method="POST">
    <div class="form-group ">
        @Html.LabelFor(m => m.UserName)
        @Html.ValidationMessageFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Tu nombre de usuario debe ser único" })
    </div>

    <div class="form-group ">
        @Html.LabelFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Introduce tu email" })
    </div>

    <div class="form-group ">
        @Html.LabelFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Introduce una contraseña" })
    </div>

    <div class="form-group ">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Repite la contraseña" })
    </div>

    <div class="">
        <input type="submit" class="btn btn-default btn-primary" value="Empezar!" data-cat="Register" data-act="Submit" data-lab="Regular" />
    </div>
    <div>
        <div>
            ¿Ya tienes cuenta? <a href="@Url.Action(MVC.Account.Login())">Haz login</a>
        </div>
    </div>
</form>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
