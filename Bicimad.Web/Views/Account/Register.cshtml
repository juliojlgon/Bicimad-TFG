@model Bicimad.Web.Models.AccountModels.RegisterModel
@{
    ViewBag.Title = "Registrarse";
}

@*<h2>@ViewBag.Title.</h2>*@

<!--Form-->
<div class="card-panel reply-section hoverable">
    <div class="row">
        <h5 class="text-center">Registrate!</h5>
        <hr>
        <form action="@Url.Action(MVC.Account.Register())" method="POST" class="col-md-12">
            <div class="input-field">
                <i class="material-icons prefix">account_circle</i>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="input-field">
                <i class="material-icons prefix">email</i>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="input-field">
                <i class="material-icons prefix">https</i>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="input-field">
                <i class="material-icons prefix">https</i>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <div class="text-center">
                <input type="submit" class="btn btn-primary" value="Empezar!" data-cat="Register" data-act="Submit" data-lab="Regular" />
            </div>
            <div class="text-center">

                ¿Ya tienes cuenta? <a href="@Url.Action(MVC.Account.Login())">Haz login</a>

            </div>
        </form>
        

    </div>
    <!--./Main row-->
</div>
<!--Reply section-->





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
